  <!-- Modal -->
  <div class="modal" id="modal" role="dialog" aria-modal="true" aria-label="Project details">
    <div class="modal-card">
      <div class="modal-head">
        <h3 class="modal-title" id="modalTitle">Project</h3>
        <button class="btn" id="closeModal" type="button" aria-label="Close">
          <span class="icon">esc</span> Close
        </button>
      </div>
      <div class="modal-body">
        <p id="modalDesc"></p>
        <div class="mini" id="modalTools"></div>
        <p style="margin-top:12px;" id="modalDetails"></p>
      </div>
    </div>
  </div>

  <script>
    // --- Year
    document.getElementById("year").textContent = new Date().getFullYear();

    // --- Theme toggle (persists)
    const themeBtn = document.getElementById("themeBtn");
    const themeLabel = document.getElementById("themeLabel");
    const root = document.body;

    function setTheme(mode){
      root.setAttribute("data-theme", mode);
      themeLabel.textContent = mode === "dark" ? "Dark" : "Light";
      localStorage.setItem("theme", mode);
    }
    const savedTheme = localStorage.getItem("theme");
    setTheme(savedTheme ? savedTheme : "light");

    themeBtn.addEventListener("click", () => {
      const current = root.getAttribute("data-theme");
      setTheme(current === "dark" ? "light" : "dark");
    });

    // --- Scroll reveal
    const reveals = document.querySelectorAll(".reveal");
    const io = new IntersectionObserver((entries) => {
      entries.forEach(e => {
        if(e.isIntersecting){
          e.target.classList.add("on");
          // Animate skill bars when skills section comes in
          if(e.target.id === "skills"){
            animateSkillBars();
          }
          io.unobserve(e.target);
        }
      });
    }, { threshold: 0.12 });

    reveals.forEach(el => io.observe(el));

    // --- Skill bar animation
    function animateSkillBars(){
      document.querySelectorAll(".skill").forEach(s => {
        const level = s.getAttribute("data-level");
        const fill = s.querySelector(".fill");
        requestAnimationFrame(() => {
          fill.style.width = Math.max(6, Math.min(100, Number(level))) + "%";
        });
      });
    }

    // --- Modal for project cards
    const modal = document.getElementById("modal");
    const closeModalBtn = document.getElementById("closeModal");
    const modalTitle = document.getElementById("modalTitle");
    const modalDesc = document.getElementById("modalDesc");
    const modalTools = document.getElementById("modalTools");
    const modalDetails = document.getElementById("modalDetails");

    function openModalFrom(el){
      modalTitle.textContent = el.dataset.title || "Project";
      modalDesc.textContent = el.dataset.desc || "";
      modalTools.textContent = (el.dataset.tools || "").trim();
      modalDetails.textContent = el.dataset.details || "";
      modal.classList.add("show");
      document.body.style.overflow = "hidden";
      closeModalBtn.focus();
    }
    function closeModal(){
      modal.classList.remove("show");
      document.body.style.overflow = "";
    }

    document.querySelectorAll(".proj").forEach(card => {
      card.addEventListener("click", () => openModalFrom(card));
      card.addEventListener("keydown", (e) => {
        if(e.key === "Enter" || e.key === " "){
          e.preventDefault();
          openModalFrom(card);
        }
      });
    });

    closeModalBtn.addEventListener("click", closeModal);
    modal.addEventListener("click", (e) => {
      if(e.target === modal) closeModal();
    });

    window.addEventListener("keydown", (e) => {
      if(e.key === "Escape" && modal.classList.contains("show")) closeModal();
    });

    // --- Smooth anchor scroll (native behavior with fallback)
    document.querySelectorAll('a[href^="#"]').forEach(a => {
      a.addEventListener("click", (e) => {
        const id = a.getAttribute("href");
        const target = document.querySelector(id);
        if(target){
          e.preventDefault();
          target.scrollIntoView({ behavior: "smooth", block: "start" });
          history.pushState(null, "", id);
        }
      });
    });
  </script>
</body>
</html>